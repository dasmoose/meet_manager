var table = document.getElementById("events");
if (<%= @event.errors.any? %>) 
{
  document.getElementById('event_number').setAttribute("class", "error");
}
else 
{
  var flash = document.getElementById("flash");
  flash.innerHTML = "<%= j render("sucess_add") %>"
  table.innerHTML = "<%= j render(@event) %>";
  var number = document.getElementById('event_number');
  number.value = parseInt(number.value) + 1;
  number.setAttribute("class", "");
  document.getElementById('age_group').value = "" ;
}
