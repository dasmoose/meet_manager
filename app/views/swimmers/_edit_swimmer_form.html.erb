<div class="row">
  <div class="large-12 columns">
    <h6> Edit Swimmer</h6>
  </div>
</div>
<%= form_for(@swimmer, :url => meet_team_swimmer_path(params[:meet_id], params[:team_id], @swimmer), :method => "put", :html => {:class => "custom"} ) do |f| %>
  <div class="row">
    <div class="large-3 columns">
      <label>First Name </label>
      <%= f.text_field :first_name, :id => "first_name", :placeholder => @swimmer.first_name %>
    </div>
    <div class="large-3 columns">
      <label>Last Name</label>
      <%= f.text_field :last_name, :id => "last_name" %>
    </div>
    <div class="large-2 columns">
      <label>Age</label>
      <%= f.text_field :age, :id => "age" %> 
    </div>
    <div class="large-2 columns">
      <label>Gender</label>
      <%= select_tag( :gender, options_for_select(@gender_list) ) %>
    </div>
    <div class="large-2 columns">
      <label>&nbsp;</label>
      <%= f.submit "Save Swimmer", :class => "small button"%>
    </div>
  </div>
<% end %>
