<div class="row">
  <div class="twelve columns">
    <div class="row">
      <div class="nine columns">
        <h1>New Swimmer</h1>
        <h4 class="subheader"><%=@team.name %> </h4>
      </div>
      <div class="three columns">
        <%= link_to "View All Swimmers", meet_team_swimmers_path(params[:meet_id], params[:team_id]), :class => "success button" %>
      </div>
    </div>
    <div class="panel"> <div class="row">
        <%= form_for(@swimmer, :url => meet_find_events_path(params[:meet_id]), :remote => true) do |f| %>
        <div class="three columns">
          <label>First Name </label>
          <%= f.text_field :first_name, :id => "first_name" %>
        </div>
        <div class="three columns">
          <label>Last Name</label>
          <%= f.text_field :last_name, :id => "last_name" %>
        </div>
        <div class="two columns">
          <label>Age</label>
          <%= f.text_field :age, :id => "age" %> 
        </div>
        <div class="two columns">
          <%= select_tag(:gender, options_for_select(@gender_list)) %>
        </div>
        <div class="two columns">
          <br>
          <%= f.submit "Find Events", :class => "medium button"%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <div class="panel">
      <h3>Available Events</h3>
      <table class="twelve">
        <thead>
          <tr>
            <th>Number</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Race Type</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
