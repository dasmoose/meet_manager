<div class="row">
  <div class="large-3 center columns">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <fieldset>
        <legend>Log In </legend>
        <%= f.text_field :username, :placeholder => "Username" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.submit "Sign-In" %>
      </fieldset>
    <% end %> 
  </div>
</div>
